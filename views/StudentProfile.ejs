    <div class="container bootstrap snippet">


        <div class="row">
            <div class="col-sm-10">
                <h1>Student Information</h1>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-4">

                </hr><br>




                <div class="" id="messages">


                    <hr>


                    <div class="text-center">


                        <img src="../<%= user[0].dp %>" class="avatar img-circle img-thumbnail">

                    </div>

                    <form method="POST" action="../student/<%=user[0].email%>">

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="first_name">
                                    <h4>Name</h4>
                                </label>
                                <input type="text" class="form-control" name="name" id="name" value="<%=user[0].name%>" readonly>
                            </div>
                        </div>
                        <div class="form-group">




                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="status">
                                        <h4>Status</h4>
                                    </label>
                                    <input type="text" class="form-control" name="status" id="status" value="<%=user[0].status%>">
                                </div>
                            </div>

                            <div class="form-group">

                            </div>
                            <div class="form-group">

                                <div class="col-xs-6">
                                    <label for="email">
                                        <h4>Email</h4>
                                    </label>
                                    <input type="email" class="form-control" name="email" id="email" value="<%=user[0].email%>" readonly>
                                </div>
                            </div>


                            <!-- ====================== -->




                            <div class="form-group">

                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <br>
                                    <button class="btn btn-lg btn-success" type="submit" id="btnSave"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>

                                </div>
                            </div>

                    </form>

                    </div>

                </div>
            </div>

            <div class="col-sm-4">

                </hr><br>




                <div class="" id="messages">


                    <hr>





                    <div class="form-group">






                        <div class="form-group">

                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="heading">
                                    <h4>Show Library Information</h4>
                                </label>
                                <!-- <p id="books"></p> -->
                                <table id="books" class="table table-hover table-condensed" border="1">
                                    <tr>
                                        <th>Book Name</th>
                                        <th>Borrow Date</th>
                                        <th>Return Date</th>
                                    </tr>
                                </table>
                            </div>
                        </div>


                        <!-- ====================== -->




                        <div class="form-group">

                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="button" id="btnLibrary"><i class="glyphicon glyphicon-ok-sign"></i> Library</button>

                            </div>
                        </div>



                    </div>

                    <div class="form-group">






                        <div class="form-group">

                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="heading">
                                    <h4>Show Account Information</h4>
                                </label>
                                <!-- <p id="books"></p> -->
                                <table id="payment" class="table table-hover table-condensed" border="1">
                                    <tr>
                                        <th>Account Name</th>
                                        <th>Student Info</th>
                                        <th>Last Payment</th>
                                    </tr>
                                </table>
                            </div>
                        </div>


                        <!-- ====================== -->




                        <div class="form-group">

                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="button" id="btnAccount"><i class="glyphicon glyphicon-ok-sign"></i>Account</button>

                            </div>
                        </div>



                    </div>

                </div>
            </div>

        </div>


