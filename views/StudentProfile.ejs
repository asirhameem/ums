        <script src="../assets/myprofile/vendor/jquery/jquery.min.js"></script>
        <script src="../assets/myprofile/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script>
            $("#navbar").load("../home/navbar");
        </script>

        <!-- <script type="text/javascript" src="Navbar.js"></script> -->
        <script>
            $('#btnLibrary').on('click', function() {
                $.ajax({
                    url: '/library/<%=user[0].email%>',
                    method: 'get',
                    dataType: 'json',
                    success: function(data) {
                        var msg = "";
                        for (var i = 0; i < data.length; i++) {
                            //var msg = data[i].n_details + "  - " + data[i].posted_by;
                            msg = msg + "<tr> <td> '" + data[i].bookname + "' </td> <td> '" + data[i].bdate + "' </td> <td> '" + data[i].rdate + "' </td> </tr>";
                        }
                        $('#books').append(msg);

                    },
                    error: function(response) {
                        alert('server error occured')
                    }
                });
            })
        </script>

        <script>
            $('#btnAccount').on('click', function() {
                $.ajax({
                    url: '/account/<%=user[0].email%>',
                    method: 'get',
                    dataType: 'json',
                    success: function(data) {
                        var msg = "";
                        for (var i = 0; i < data.length; i++) {
                            //var msg = data[i].n_details + "  - " + data[i].posted_by;
                            msg = msg + "<tr> <td> " + data[i].pid + " </td> <td> " + data[i].pamount + " </td> <td> " + data[i].pdate + " </td> </tr>";
                        }
                        $('#payment').append(msg);

                    },
                    error: function(response) {
                        alert('server error occured')
                    }
                });
            })
        </script>
